@using Microsoft.AspNetCore.Components.Routing

<header>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand text-dark" href="">Grain Broker</a>
            <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="@NavMenuCssClass navbar-collapse" @onclick="ToggleNavMenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <NavLink class="nav-link text-dark" href="" Match="NavLinkMatch.All">
                            <span class="oi oi-home" aria-hidden="true"></span> Home
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link text-dark" href="add-customer">
                            <span class="oi oi-person" aria-hidden="true"></span> Customers
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link text-dark" href="add-supplier">
                            <span class="oi oi-box" aria-hidden="true"></span> Suppliers
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link text-dark" href="place-order">
                            <span class="oi oi-plus" aria-hidden="true"></span> Place Order
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link text-dark" href="order-fulfillment">
                            <span class="oi oi-task" aria-hidden="true"></span> Fulfillments
                        </NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<style>
    .navbar {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        padding: 0.5rem 1rem;
    }

    .navbar-brand {
        font-size: 1.25rem;
        padding: 0.5rem 0;
        margin-right: 2rem;
    }

    .nav-link {
        padding: 0.5rem 1rem !important;
        color: #000 !important;
    }

    .nav-link:hover {
        background-color: #e9ecef;
        border-radius: 0.25rem;
    }

    .nav-link.active {
        font-weight: bold;
        background-color: #e9ecef;
        border-radius: 0.25rem;
    }

    .navbar-toggler {
        border-color: #dee2e6;
        padding: 0.25rem 0.5rem;
    }

    ::deep .navbar-collapse {
        background-color: #f8f9fa;
        padding: 1rem;
    }

    ::deep .page {
        padding-top: 60px;
    }

    ::deep .navbar-collapse.show {
        position: absolute;
        top: 56px;
        left: 0;
        right: 0;
        z-index: 1000;
        background: #f8f9fa;
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
    }
</style>



@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}